{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "ES6",
      "dom"
    ],
    "allowImportingTsExtensions": false,
    "paths": {
      "@api": ["./src/api"],
      "@common": ["./src/common"],
      "@components": ["./src/components"],
      "@models": ["./src/models"],
      "@service": ["./src/service"],
      "@store": ["./src/store"],
      "@theme": ["./src/theme"],
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
